set number      " enable line numbers
set hlsearch    " highlight search items
set mouse=a     " enable the mouse
set showmatch   " show matching parenthesis
syntax on       " enable syntax highlighting
set backup      " keep a backup file
set softtabstop=2 "soft tabs = 2 spaces
set t_Co=256    " ensure terminal vim is using 256 colors
set ruler       " show the cursor position all the times
set smartindent "automatically indents lines after opening a bracket
set autoindent  "if indented, new lines will also be indented
